@model List<ProductModel>
@{
    ViewData["Title"] = "Корзина";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <div class="cart-header mb-3">
                <h2>Корзина</h2>
                <span class="text-muted">@Model?.Count товаров</span>
            </div>

            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-2">
                                <img src="@item.Image" class="img-fluid p-2" alt="@item.Name">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <h5 class="card-title mb-1">@item.Name</h5>
                                    <p class="card-text text-muted small mb-1">Артикул: @item.Id</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card-body text-end">
                                    <div class="d-flex justify-content-end align-items-center mb-2">
                                        <button class="btn btn-outline-secondary btn-sm">-</button>
                                        <span class="mx-2">1</span>
                                        <button class="btn btn-outline-secondary btn-sm">+</button>
                                    </div>
                                    <h5 class="card-title text-danger">@item.Price ₽</h5>
                                    <button class="btn btn-link text-danger p-0"><small>Удалить</small></button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-cart text-center py-5">
                    <img src="https://static-basket-01.wb.ru/vol1/i/empty-cart.png" width="120" alt="Empty cart">
                    <h4 class="mt-3">Корзина пуста</h4>
                    <p class="text-muted">Добавьте товары из каталога</p>
                    <a href="/" class="btn btn-primary mt-3">В каталог</a>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="cart-summary p-3 bg-light rounded">
                <h5 class="mb-3">Ваш заказ</h5>
                <div class="d-flex justify-content-between mb-2">
                    <span>Товары (@Model?.Count)</span>
                    <span>@ViewData["Total"] ₽</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Доставка</span>
                    <span class="text-success">Бесплатно</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold mb-4">
                    <span>Итого</span>
                    <span>@ViewData["Total"] ₽</span>
                </div>
                <a href="#" class="btn btn-danger w-100 mb-2">Перейти к оформлению</a>
                <a href="/Home/Clear" class="btn btn-outline-secondary w-100">Очистить корзину</a>
            </div>
        </div>
    </div>
</div>

<style>
    .cart-header {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .cart-summary {
        position: sticky;
        top: 20px;
    }

    .empty-cart {
        background-color: #f8f9fa;
        border-radius: 8px;
    }
</style>