@{
    ViewData["Title"] = "Главная";
}



<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex overflow-auto">
                <a href="#" class="btn btn-outline-secondary me-2">Все товары</a>
                <a href="#" class="btn btn-outline-secondary me-2">Новинки</a>
                <a href="#" class="btn btn-outline-secondary me-2">Акции</a>
                <a href="#" class="btn btn-outline-secondary me-2">Бестселлеры</a>
            </div>
        </div>
    </div>

    <div class="row" id="load">
        <!-- Products will be loaded here -->
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <div class="spinner-border text-primary d-none" role="status" id="loadingSpinner">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var page = 1;
            var loading = false;

            loadMoreNumbers();

            $(window).scroll(function() {
                if ($(window).scrollTop() + $(window).height() > $(document).height() - 200) {
                    if (!loading) {
                        loadMoreNumbers();
                    }
                }
            });

            function loadMoreNumbers() {
                loading = true;
                $('#loadingSpinner').removeClass('d-none');

                $.get('/Home/LoadPage', { page: page }, function(data) {
                    if (data) {
                        $('#load').append(data);
                        page++;
                    }
                }).always(function() {
                    loading = false;
                    $('#loadingSpinner').addClass('d-none');
                });
            }
        });
    </script>
}

<style>
    .card {
        transition: transform 0.2s;
        margin-bottom: 20px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card-img-top {
        object-fit: contain;
        height: 200px;
        padding: 10px;
    }

    .card-title {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .price {
        color: #f84147;
        font-weight: bold;
        font-size: 1.2rem;
    }
</style>